@model Admin.Models.Categories.Category

<div class="wrapper" bis_skin_checked="1">
    <!--Main-->
    <main>
        <section class="content">
            <div class="container-fluid" bis_skin_checked="1">
                <div class="container justify-content-center" bis_skin_checked="1">
                    <h1 class="justify-content-center">Tạo danh mục</h1>
                    <div class="row justify-content-center" bis_skin_checked="1">

                        <div class="col-md-8" bis_skin_checked="1">
                            <div class="card" style="box-shadow: unset" bis_skin_checked="1">
                                <div class="card-body" bis_skin_checked="1">
                                    <br>
                                    <form asp-action="AddCategory" enctype="multipart/form-data" method="post">
                                        <div asp-validation-summary="All" class="text-danger"></div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Name">Tên danh mục:</label>
                                            <input asp-for="Name" type="text" class="form-control" />
                                        </div>
                                        <button type="submit" class="btn btn-primary">Tạo</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
</div>