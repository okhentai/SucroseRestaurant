@model Admin.Models.ViewModel.ForgotPasswordViewModel

<div class="container-xxl py-5 px-0 wow fadeInUp" data-wow-delay="0.1s">
    <div class="bg-dark p-lg-5 align-items-center">
        <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
            <h5 class="section-title ff-secondary text-start text-warning fw-normal">Quên mật khẩu</h5>
            <h1 class="text-white mb-4">Quên mật khẩu</h1>
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <div class="form-floating">
                        <input asp-for="Email" type="text" class="form-control" id="email" placeholder="Email">
                        <label asp-for="Email" for="email">Email</label>
                    </div>
                </div>
                <div class="col-12">
                    <button class="btn btn-info w-100 py-3" type="submit">Lấy mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
</div>