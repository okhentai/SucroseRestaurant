@model Admin.Models.ViewModel.ChangePasswordViewModel

<div class="container-xxl py-5 px-0 wow fadeInUp" data-wow-delay="0.1s">
    <div class="bg-dark p-lg-5 align-items-center">
        <div class="p-5 wow fadeInUp" data-wow-delay="0.2s">
            <h5 class="section-title ff-secondary text-start text-warning fw-normal">Cập nhật</h5>
            <h1 class="text-white mb-4">Cập nhật thông tin</h1>
            <form asp-action="ChangePassword" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <div class="mb-3">
                    <div class="form-floating">
                        <input asp-for="OldPassword" class="form-control" id="OldPassword" placeholder="Mật khẩu cũ"><span asp-validation-for="OldPassword" class="text-danger"></span>
                        <label asp-for="OldPassword" for="OldPassword">Mật khẩu cũ</label>
                    </div>

                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        <input asp-for="NewPassword" class="form-control" id="NewPassword" placeholder="Mật khẩu mới"><span asp-validation-for="NewPassword" class="text-danger"></span>
                        <label asp-for="NewPassword" for="NewPassword">Mật khẩu mới</label>
                    </div>
                </div>
                <div class="mb-3">
                    <div class="form-floating">
                        <input asp-for="ConfirmPassword" class="form-control" id="ConfirmPassword" placeholder="Xác nhận mật khẩu"><span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        <label asp-for="ConfirmPassword" for="ConfirmPassword">Xác nhận mật khẩu</label>
                    </div>
                </div>
                <div class="col">
                    <button class="btn btn-success w-25 mx-auto" type="submit">Save</button>
                    <a asp-action="Profile" asp-controller="Account" class="btn mx-auto w-25 btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>