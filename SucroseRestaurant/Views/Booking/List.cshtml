@model IEnumerable<Admin.Models.Bookings.Booking>

<table class="table align-middle mb-0 bg-white">
    <thead class="bg-light my-auto">
        <tr>
            <th>Họ Tên</th>
            <th>Số điện thoại</th>
            <th>Số người</th>
            <th>Ngày giờ vào</th>
            <th>Tin nhắn</th>
            <th>Tình trạng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <p class="fw-bold mb-1">@item.Name</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@item.Phone</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@item.People</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@item.Date</p>
                </td>
                <td>
                    <p class="fw-normal mb-1">@item.Message</p>
                </td>
                <td>
                    @if (item.DaXacNhan == true)
                    {
                        <span class="badge bg-success rounded-pill d-inline">Đã chấp nhân</span>
                    }
                    else if (item.DaTuChoi == true)
                    {
                        <span class="badge bg-danger rounded-pill d-inline">Đã từ chối</span>
                    }
                    else
                    {
                        <div class="row">
                            <button id="ac" data-id="@item.Id" type="button"
                                    class="btn btn-success btn-rounded btn-sm fw-bold col m-1"
                                    data-mdb-ripple-color="dark">
                                Đồng ý
                            </button>
                            <button id="dn" data-id="@item.Id" type="button"
                                    class="btn btn-danger btn-rounded btn-sm fw-bold col m-1"
                                    data-mdb-ripple-color="dark">
                                Từ chối
                            </button>
                        </div>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>